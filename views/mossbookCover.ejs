<link rel="stylesheet" href="/css/mossbook.css">



<div class="moss-page" style="text-align: center;">
    <h2>📖 Mossbook Cover</h2>
  
    <% if (mossbook.coverImage) { %>
      <img src="<%= mossbook.coverImage %>" style="max-height: 180px; border-radius: 1rem; margin-bottom: 1rem;" />
    <% } %>
  
    <% if (session.userId.toString() === mossbook.owner.toString()) { %>
      <form action="/mossbook/<%= mossbook._id %>/cover" method="POST">
        <input name="title" value="<%= mossbook.title %>" placeholder="Mossbook Title" required />
        <br><br>
        <input name="coverImage" placeholder="Cover Image URL" value="<%= mossbook.coverImage %>" />
        <br><br>
        <button type="submit">💾 Save Cover</button>
      </form>
      <br>
      <a href="/mossbook/<%= mossbook._id %>/members">👥 Manage Members</a>
    <% } %>
  
    <br>
    <a href="/mossbook/<%= mossbook._id %>/page/0">➡️ Enter Mossbook</a>
  </div>
  
  <% }) %>
<% } %>
