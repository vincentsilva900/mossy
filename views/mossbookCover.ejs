<!-- 🔙 Back to Your Own Profile -->
<div style="margin: 1rem 0;">
    <a href="/user/profile">
      <button style="background-color: #ffccf9; border: none; padding: 0.5rem 1rem; border-radius: 10px; font-weight: bold; cursor: pointer;">
        ⬅️ Back to My Profile
      </button>
    </a>
  </div>


<div class="moss-page" style="text-align: center;">
    <h2 style="font-family: 'Comic Sans MS', cursive; color: #3e6043;">📔 Your Mossbooks</h2>
  
    <!-- Create a new Mossbook -->
    <form action="/mossbook/<%= mossbook._id %>/cover" method="POST" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="Mossbook Title" value="<%= mossbook.title %>" required />
      
        <p style="margin-top:1rem;">📸 Upload Cover Image</p>
        <input type="file" name="coverImageUpload" accept="image/*" />
      
        <br><br>
        <button type="submit">💾 Save Cover</button>
      </form>
      
  
    <!-- Show your list of Mossbooks -->
    <% if (mossbooks && mossbooks.length > 0) { %>
      <% mossbooks.forEach(book => { %>
        <div style="margin: 2rem auto; padding: 1.5rem; border: 4px double #8fc790; border-radius: 1.2rem; max-width: 500px; background: #f7fff6; box-shadow: 0 0 10px #dceedd;">
          <h3 style="color: #2f5534;"><%= book.title %></h3>
          
          <% if (book.coverImage) { %>
            <img src="<%= book.coverImage %>" style="max-height: 120px; border-radius: 1rem; margin-top: 1rem;" />
          <% } %>
  
          <br><br>
          <a href="/mossbook/<%= book._id %>/cover" style="text-decoration: none; background: #cbeac9; padding: 0.5rem 1rem; border-radius: 1rem;">🌿 View Cover</a>
          <a href="/mossbook/<%= book._id %>/page/0" style="text-decoration: none; background: #d0ffd8; padding: 0.5rem 1rem; border-radius: 1rem; margin-left: 1rem;">📖 Open Pages</a>
        </div>
      <% }) %>
    <% } else { %>
      <p style="margin-top: 2rem; color: #777;">You don’t have any Mossbooks yet! 🥺</p>
    <% } %>
  </div>
  