<!DOCTYPE html>
<html>
<head>
  <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">

  <link rel="canonical" href="https://mossbook.site">
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet">

  <title>Mossy</title>
  <link rel="stylesheet" href="/css/style.css">
  <% if (typeof pageClass !== 'undefined' && pageClass === 'mossbook-mode') { %>
    <link rel="stylesheet" href="/css/mossbook.css">
  <% } %>
  <link rel="stylesheet" href="/style/brand.css">
</head>
<body class="mossbook-mode">
  <!-- Add this to layout.ejs body tag -->
<div class="mossy-overlay"></div>

  <%- include(content) %>

  <script>
    document.getElementById('mossbookForm').addEventListener('submit', function (e) {
      const fileInput = document.querySelector('input[type="file"][name="image"]');
      const textArea = document.querySelector('textarea[name="text"]');
      
      const fileSelected = fileInput && fileInput.files.length > 0;
      const textEntered = textArea && textArea.value.trim().length > 0;
  
      if (!fileSelected && !textEntered) {
        e.preventDefault(); // stop form from submitting
        alert("ðŸŒ¿ Mossbook pages need a little something!\nPlease add text, a photo, or both to continue.");
      }
    });
  </script>
  
</body>
</html>
