<!-- 🔙 Back to Your Own Profile -->
<div style="margin: 1rem 0;">
    <a href="/user/profile">
      <button style="background-color: #D0CA84; border: none; padding: 0.5rem 1rem; border-radius: 10px; font-weight: bold; cursor: pointer;">
        ⬅️ Back to My Profile
      </button>
    </a>
  </div>

<h2 style="text-align:center;"><%= mossbook.title %></h2>
<h4 style="text-align:center;">
    Page <%= pageCount === 0 ? 0 : page + 1 %> / <%= pageCount %>
  </h4>
  

<% if (entry) { %>
  <div style="text-align:center; margin-top:2rem; max-width:600px; margin:auto; background:#f8fff8; padding:1rem; border-radius:1rem; box-shadow: 0 0 12px rgba(0,0,0,0.05);">
    <% if (entry.image) { %>
      <img src="<%= entry.image %>" style="max-width:100%; border-radius: 1rem; margin-bottom:1rem;" />
    <% } %>
    <p style="font-family: 'Comic Sans MS', cursive; font-size: 1.1rem; color:#446144;">
      <%= entry.text %>
    </p>
    <p style="font-size: 0.9rem; color:#aaa;">Posted <%= new Date(entry.createdAt).toLocaleString() %></p>
  </div>
<% } else { %>
  <p style="text-align:center;">No entry on this page yet 🌿</p>
<% } %>

<!-- NAV -->
<div style="text-align:center; margin-top: 2rem;">
  <% if (page > 0) { %>
    <a href="/mossbook/<%= mossbook._id %>/page/<%= page - 1 %>">⬅️ Previous</a>
  <% } %>
  <% if (page < pageCount - 1) { %>
    <a href="/mossbook/<%= mossbook._id %>/page/<%= page + 1 %>" style="margin-left:2rem;">Next ➡️</a>
  <% } %>
</div>

<!-- ✏️ POST NEW ENTRY -->
<form id="mossbookForm" action="/mossbook/<%= mossbook._id %>/entry" method="POST" enctype="multipart/form-data">

  <label>📸 Upload Image:</label><br>
  <input type="file" name="image" accept="image/*"><br><br> <!-- optional -->

  <label>📓 Memory Entry:</label><br>
  <textarea name="text" rows="4" cols="50"></textarea><br><br> <!-- also optional -->

  <button type="submit">💾 Save Page</button>
</form>

