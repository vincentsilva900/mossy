<h2>Search Results</h2>

<% if (users.length === 0) { %>
    <p>No users found.</p>
  
    <!-- üîô Back to Profile Button -->
    <div style="margin-top: 1rem;">
      <a href="/user/profile">
        <button style="
          padding: 0.5rem 1rem;
          border-radius: 10px;
          background-color: #D0CA84;
          border: none;
          font-weight: bold;
          cursor: pointer;
          color: #000000;
        ">
          ‚¨ÖÔ∏è Back to My Profile
        </button>
      </a>
    </div>
  <% } else { %>
  
  <% users.forEach(result => { %>
    <div style="margin-bottom: 1rem; display: flex; align-items: center; justify-content: space-between;">
      <div>
        <a href="/user/<%= result._id %>">
          <img src="<%= result.profilePic %>" width="30" style="border-radius: 50%; margin-right: 0.5rem;" />
          <%= result.username %>
        </a>
      </div>

      <% if (result._id.toString() !== session.userId.toString()) { %>
        <% const isFriend = result.friends?.some(friend => friend._id?.toString() === session.userId.toString()); %>

        <% if (!isFriend) { %>
          <form action="/user/friend/<%= result._id %>" method="POST" style="margin-left: 1rem;">
            <button type="submit" style="font-size: 0.8rem;">‚ûï Add Friend</button>
          </form>
        <% } else { %>
          <form action="/user/unfriend/<%= result._id %>" method="POST" style="margin-left: 1rem;">
            <button type="submit" style="font-size: 0.8rem;">‚ùå Remove Friend</button>
          </form>
        <% } %>
      <% } %>
    </div>
  <% }) %>
<% } %>
