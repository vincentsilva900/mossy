<div class="mossbeacon-chat-container">
  <h1 style="color: #D0CA84;">Mossbeacon Music Portal ğŸµâœ¨</h1>

  <form action="/mossbeacon/send" method="POST">
    <label for="receiverId" style="color: #D0CA84;">Choose someone to send a song to:</label>
    <select name="receiverId" required>
      <% otherBeaconUsers.forEach(friend => { %>
        <option value="<%= friend._id %>"><%= friend.username %></option>
      <% }); %>
    </select>
  
    <label for="musicLink" style="color: #D0CA84;">Music Link (Spotify, YouTube, etc):</label>
    <input type="url" name="musicLink" required placeholder="Paste link here">
  
    <button type="submit">Send âœ‰ï¸</button>
  </form>
  

  <hr>

  <h2 style="color: #D0CA84;">Music You Sent ğŸµ</h2>
  <div style="margin-bottom: 2rem;">
    <% if (messagesSent.length > 0) { %>
      <% messagesSent.forEach(msg => { %>
        <div style="margin-bottom: 1rem; padding: 0.5rem; border: 1px solid #ccc; border-radius: 10px; background-color: #d0e7c2;">
          <p style="color: #e6da58;"><strong>To: <%= msg.receiver.username %></strong></p>
          <p><a href="<%= msg.musicLink %>" target="_blank"><%= msg.musicLink %></a></p>
          <p style="font-size: 0.8rem; color: #dfd674;"><%= msg.timestamp.toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>You haven't sent any music yet ğŸŒ™</p>
    <% } %>
  </div>

  <h2 style="color: #D0CA84;">Music You Received ğŸ¶</h2>
  <div style="margin-bottom: 2rem;">
    <% if (messagesReceived.length > 0) { %>
      <% messagesReceived.forEach(msg => { %>
        <div style="margin-bottom: 1rem; padding: 0.5rem; border: 1px solid #ccc; border-radius: 10px; background-color: #d0e7c2;">
          <p style="color: #e6da58;"><strong>From: <%= msg.sender.username %></strong></p>
          <p><a href="<%= msg.musicLink %>" target="_blank"><%= msg.musicLink %></a></p>
          <p style="font-size: 0.8rem; color: #dfd674;"><%= msg.timestamp.toLocaleString() %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No one has sent you music yet ğŸŒ™</p>
    <% } %>
  </div>

</div>
