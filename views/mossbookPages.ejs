<link rel="stylesheet" href="/css/mossbook.css">

<h2 style="text-align:center; font-family: 'Comic Sans MS', cursive;">ğŸ“– <%= mossbook.title %></h2>
<h4 style="text-align:center;">Page <%= page + 1 %> / 25</h4>

<form action="/mossbook/<%= mossbook._id %>/page/<%= page %>" method="POST" enctype="multipart/form-data" style="text-align:center; margin-top: 2rem;">

  <!-- Upload -->
  <div style="margin-bottom: 1rem;">
    <label style="display:block; font-weight:bold;">ğŸ“· Upload a photo for this page:</label>
    <input type="file" name="image" accept="image/*" required />
  </div>

  <!-- Text area -->
  <div style="margin-bottom: 1rem;">
    <label style="display:block; font-weight:bold;">ğŸ““ Write your memory:</label>
    <textarea name="text" rows="4" cols="50" placeholder="Type your dreamy journal entry..." required></textarea>
  </div>

  <button type="submit" style="background-color: #b5ead7; padding: 0.5rem 1.2rem; font-size: 1rem; border-radius: 1rem; color: #2f4858;">
    ğŸ’¾ Save Page
  </button>
</form>

<!-- Display saved content -->
<% const savedPage = mossbook.pages[page]; %>
<% if (savedPage && (savedPage.image || savedPage.text)) { %>
  <div style="margin-top: 3rem; border: 3px dashed #c8facc; padding: 1.5rem; border-radius: 1rem; max-width: 600px; margin-left: auto; margin-right: auto; background: #f6fff8;">
    <% if (savedPage.image) { %>
      <img src="<%= savedPage.image %>" style="max-width: 100%; border-radius: 1rem; margin-bottom: 1rem;" />
    <% } %>
    <% if (savedPage.text) { %>
      <p style="font-size: 1.1rem; font-family: 'Comic Sans MS', cursive; color: #446144;">
        <%= savedPage.text %>
      </p>
    <% } %>
  </div>
<% } %>
