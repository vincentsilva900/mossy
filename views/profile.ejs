<%- include('layout') %>
<h2>Welcome, <%= user.username %></h2>
<img src="<%= user.profilePic %>" width="100"/>

<form action="/user/post" method="POST">
  <input name="content" placeholder="What's on your mind?" />
  <button type="submit">Post</button>
</form>

<h3>Your Friends</h3>
<div class="friends-list">
  <% user.friends.forEach(friend => { %>
    <a href="/user/<%= friend._id %>">
      <img src="<%= friend.profilePic %>" width="30"/> <%= friend.username %>
    </a>
  <% }) %>
</div>

<h3>Feed</h3>
<% posts.forEach(post => { %>
  <div class="post">
    <a href="/user/<%= post.user._id %>"><%= post.user.username %></a>
    <p><%= post.content %></p>
    <small><%= post.createdAt.toLocaleString() %></small>
    <form action="/user/like/<%= post._id %>" method="POST">
      <button type="submit">❤️</button> <%= post.likes.length %>
    </form>
  </div>
<% }) %>
